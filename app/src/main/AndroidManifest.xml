<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="proyecto.anigrud">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application android:name=".views.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".views.SobreActivity"
            android:label="@string/title_activity_sobre"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.BuscarActivity"
            android:label="@string/title_activity_buscar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.AniCRUD"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.FormJavaActivity"
            android:label="@string/Formulario"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.ListadoActivity"
            android:label="@string/listado"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>